{
  "name": "@jahed/promises",
  "version": "0.1.0",
  "description": "Functions for Promises",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "docs"
  ],
  "sideEffects": false,
  "author": "Jahed Ahmed",
  "license": "MIT",
  "repository": "https://github.com/jahed/promises",
  "scripts": {
    "lint": "tslint --project ./tsconfig.json",
    "test": "jest",
    "build:lib": "rimraf lib && tsc",
    "build:docs": "rimraf docs && typedoc --theme default --exclude '**/*.test.ts' --out docs --mode file --target ES6",
    "push:git": "git push && git push --tags",
    "push:docs": "bash -i ./publish-docs.sh",
    "prepublishOnly": "yarn lint && yarn test && yarn build:lib && yarn build:docs",
    "postpublish": "yarn push:git && yarn push:docs"
  },
  "devDependencies": {
    "@types/jest": "23.3.1",
    "@types/node": "10.5.4",
    "jest": "23.4.2",
    "rimraf": "2.6.2",
    "ts-jest": "23.0.1",
    "tslint": "5.11.0",
    "tslint-config-standard": "7.1.0",
    "typedoc": "0.11.1",
    "typescript": "2.9.2"
  }
}
